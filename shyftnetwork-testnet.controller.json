{
    "kind":"ReplicationController",
    "apiVersion":"v1",
    "metadata":{
       "name":"shyftnetwork",
       "labels":{
          "app":"shyftnetwork"
       }
    },
    "spec":{
       "replicas":1,
       "selector":{
          "app":"shyftnetwork"
       },
       "template":{
          "metadata":{
             "labels":{
                "app":"shyftnetwork"
             }
          },
          "spec":{
             "containers":[
                {
                   "name":"shyftnetwork",
                   "image":"shyftnetwork/testnet:0.1",
                   "ports":[
                      {
                         "name":"rpc-http-8545",
                         "containerPort":8545
                      },
                      {
                        "name":"rpc-http-8546",
                        "containerPort":8546
                     },
                     {
                        "name":"rpc-socket-31333",
                        "containerPort":31333
                     }
                   ]
                }
             ]
          }
       }
    }
 }
 